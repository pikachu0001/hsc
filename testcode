var pippo:real
pippo := 2
writeln 2 * pippo * pippo
writeln pippo
pippo := pippo * pippo * pippo * 40

var copy : real
copy := pippo
copy := copy / 40
writeln pippo
writeln copy

(*writeln pluto*)										(* decomment and try error: variable does not exist *)

write 'false || true && true = '
writeln false || true && true
write '(!true || false) && true = '
writeln (!true || false) && true

var pluto : boolean
pluto := true
writeln pluto
pluto := !pluto
writeln pluto





writeln 'try scope'

var w : real
w := 1
writeln w (* 1 *)

begin

	var w : real
	w := 2
	writeln w (* 2 *)

	begin

		var w : real
		w := 3
		writeln w (* 3 *)
		(* var w : boolean *)

	end

	writeln w (* 2 *)

	begin

		var w : real
		w := 4
		writeln w (* 4 *)

	end

	writeln w (* 2 *)


end

writeln w (* 1 *)



writeln 'Another one'
x := 1
writeln x                (* here x has value 1 *)
begin
   x := 12.5
   writeln x             (* here x has value 12.5 *)
   var x : real
   x := 2
   writeln x             (* here x has value 2 *)
   begin
      var x : boolean
      x := true
      writeln x          (* here x has value true *)
   end
   writeln x             (* here x has value 2 *)
end
writeln x                (* here x has value 12.5 *)





halt
